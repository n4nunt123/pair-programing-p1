<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Document</title>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">H8M8</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin">Home</a>
          </li>
        </ul>
      </div>
      <a href="/users" class="btn btn-outline-primary">List Users</a>
      <a class="nav-link active" href="/login">Log out</a>
    </div>
  </nav>
  <main>
    <div class="container" style="margin-top: 50px;">
      <h1>LOG ADMIN</h1>
      <div style="margin-bottom: 15px;" class="row">
        <div class="col-lg-1">
          <a href="/admin?Newest=true" class="btn btn-outline-dark">Newest</a>
        </div>
        <div class="col-lg-1">
          <a href="/admin?Oldest=true" class="btn btn-outline-dark">Oldest</a>
        </div>
        <div class="col-lg-6">
          <form action="/">
            <input type="search" id="search" name="search" class="form-control" value="">
          </form>
        </div>
      </div>
      <div class="row">
        <% result.forEach(el => { %>
          <div class="col-lg-3 col-md-4 pd-left-none no-pd" style="background-color: white; margin-bottom: 25px;">
            <div style="border: 1px solid #e5e5e5; width: 100%; float: left; background-color: white; text-align: center;">
              <div class="user-pic">
                <img src="<%= el.User.Profile.imageProfileUrl %>" alt="user_picture" style="width: 100%;">
              </div>
              
              <div style="text-align: left; padding-left: 10px;">
                <p>Name: <%= el.User.Profile.firstName %> <%= el.User.Profile.lastName %></p>
                <p>Gender: <%= el.User.Profile.gender %></p>
                <p>Phone Number: <%= el.User.Profile.phoneNumber %></p>
                <p>Email: <%= el.User.email %></p>
              </div>
            </div>
          </div>
          
          <div class="col-lg-6 col-md-8 no-pd" style="background-color: #e5e5e5; width: 75%; margin-bottom: 25px;">
            <img src="<%= el.imgUrl %>" alt="content-image" style="width: 200px">
            <p><%= el.content %></p>
            <br>
            <p>posted at: (<%= el.formattedTime %>)</p>
          </div>
        <% }); %>
      </div>
    </div>
  </main>
</body>
</html>