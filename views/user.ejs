<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Document</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">H8M8</a>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin">Home</a>
          </li>
        </ul>
      </div>
      <a class="nav-link active" href="/login">Log out</a>
    </div>
  </nav>

  <div class="container" style="margin-top: 50px;">
    <h4 style="color: red;"><%= error %></h4>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Role</th>
          <th scope="col">Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach(el => { %>
          <tr>
            <th><%= el.id %></th>
            <td><%= el.Profile.firstName %> <%= el.Profile.lastName %></td>
            <td><%= el.email %></td>
            <% if(el.isAdmin) { %> 
              <td style="color: red;">Admin</td>
            <% } else { %>
              <td style="color: green;">User</td>
            <% } %>
            <% if(el.isSuspended) { %> 
              <td style="color: red;">Suspended</td>
            <% } else { %>
              <td style="color: green;">Save</td>
            <% } %>
            <td><a class="btn btn-outline-warning" href="/users/<%= el.id %>">Suspend</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>